<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:FishOn.ModelView;assembly=FishOnMobileApp"
             x:Class="FishOn.SpeciesListPage">
  
  <StackLayout>
       <ListView HasUnevenRows="True" x:Name="speciesListView"
                      ItemsSource="{Binding SpeciesList}" SelectedItem="{Binding SelectedSpecies}" >
       <ListView.ItemTemplate>
         <DataTemplate>
            <ViewCell>
               <StackLayout>
                  <Button Text="{Binding Name}" 
                          Command="{Binding Path=BindingContext.SelectSpeciesCommand, 
                                   Source={viewModel:ElementSource speciesListView}}"
                          CommandParameter="{Binding}"/>
               </StackLayout>
            </ViewCell> 
         </DataTemplate>
       </ListView.ItemTemplate>
      </ListView>
      <ActivityIndicator IsRunning="{Binding IsBusy}"></ActivityIndicator>
  </StackLayout>
  
 
 
</ContentPage>