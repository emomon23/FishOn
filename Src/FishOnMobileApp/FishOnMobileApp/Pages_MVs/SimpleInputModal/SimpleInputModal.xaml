<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishOn.SimpleInputModal">

  <Grid>
    <Image Source="fishing_rod.png" Opacity="0.3"/>
    
    <StackLayout Padding="10, 60, 10, 0">
      <Label x:Name="lblCaption" Text="{Binding CaptionText}" FontSize="{Binding LabelFontSize}" TextColor="White" BackgroundColor="Transparent"></Label>
      <Entry x:Name="txtValue" Text="{Binding InputBoxValue}" FontSize="{Binding EntryFontSize}" TextColor="{Binding EntryTextColor}" BackgroundColor="{Binding LabelBackColor}"></Entry>
      <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" x:Name="btnContainer">
      
      </StackLayout>
    </StackLayout>
   </Grid>
</ContentPage>